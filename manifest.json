{
    "name": "Random Quote Extension for Chrome",
    "description": "An Extension that shows random quotes as pop-up on the browser",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/favicon-16x16.png",
            "32": "/images/favicon-32x32.png"
        }
    },
    "icons": {
        "16": "/images/favicon-16x16.png",
        "32": "/images/favicon-32x32.png"   
    }
} 